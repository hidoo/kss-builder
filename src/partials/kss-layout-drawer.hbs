<div class="kss-layout-drawer  kss-c-box  kss-c-box--theme-fill-main  js-kss-drawer{{#each (split (or this.class '') '/\s?,\s?/')}}  {{this}}{{/each}}">

  {{!--
    Tool bar
  --}}
  {{#> kss-bar-tool
    class=''
  }}
    {{#> kss-section-inline
      label='THEME'
      class='kss-bar-tool__theme-switcher'
    }}
      {{> kss-navi-icon
        appearance='theme'
        items=(parse '
          - label: "Switch theme to system active setting"
            value: "system"
            svg:
              width: 20
              height: 20
              content: |-
                <path fill-rule="evenodd" d="M41.024,19.017a9,9,0,1,1,9-9A9,9,0,0,1,41.024,19.017ZM41.026,3c-0.021,0-.01,14.04,0,14.04A7.02,7.02,0,0,0,41.026,3Z" transform="translate(-31)"/>
            current: true
          - label: "Switch theme to light mode"
            value: "light"
            svg:
              width: 20
              height: 20
              content: |-
                <path fill-rule="evenodd" d="M18.008,10.941l-1,.008a1,1,0,1,1-.017-2l1-.008A1,1,0,1,1,18.008,10.941ZM15.616,5.735a1,1,0,1,1-1.426-1.4l0.7-.713a1,1,0,1,1,1.426,1.4ZM10,14.994a5,5,0,1,1,5-5A5,5,0,0,1,10,14.994ZM10.008,4a1,1,0,0,1-1-1V2a1,1,0,0,1,2,0V3A1,1,0,0,1,10.008,4ZM4.3,5.811l-0.713-.7a1,1,0,1,1,1.4-1.426L5.7,4.385A1,1,0,1,1,4.3,5.811ZM4,10.058a1,1,0,0,1-.992,1.008l-1,.008a1,1,0,0,1-.017-2l1-.008A1,1,0,0,1,4,10.058Zm0.373,4.257a1,1,0,1,1,1.426,1.4l-0.7.713a1,1,0,1,1-1.426-1.4ZM10.008,16a1,1,0,0,1,1,1v1a1,1,0,0,1-2,0V17A1,1,0,0,1,10.008,16Zm5.679-1.8L16.4,14.9A1,1,0,1,1,15,16.328l-0.713-.7A1,1,0,0,1,15.687,14.2Z" />
            current: false
          - label: "Switch theme to dark mode"
            value: "dark"
            svg:
              width: 20
              height: 20
              content: |-
                <path fill-rule="evenodd" d="M80.063,13.694A8.538,8.538,0,1,1,71.049,1.56l0,0.008a0.406,0.406,0,0,1,.082-0.016,0.427,0.427,0,0,1,.427.427,0.42,0.42,0,0,1-.16.326,6.759,6.759,0,0,0,8.119,10.772l0,0a0.417,0.417,0,0,1,.194-0.053,0.427,0.427,0,0,1,.427.427A0.416,0.416,0,0,1,80.063,13.694Zm-1.3-6.784-1.747.437L76.583,9.094a0.336,0.336,0,0,1-.652,0L75.495,7.347,73.748,6.91a0.336,0.336,0,0,1,0-.652l1.747-.437,0.437-1.747a0.336,0.336,0,0,1,.652,0L77.02,5.822l1.747,0.437A0.336,0.336,0,0,1,78.767,6.91Z" transform="translate(-62)"/>
            current: false
        ')
        class='js-kss-theme-switcher'
      }}
    {{/kss-section-inline}}

    {{#unless @root.homepage}}
      {{#> kss-section-inline
        label='EXAMPLE'
        class='kss-bar-tool__example-switcher'
      }}
        {{> kss-navi-button
          appearance='example'
          items=(parse '
            - label: "Switch example to light mode"
              value: "light"
            - label: "Switch example to dark mode"
              value: "dark"
            - label: "Switch example to light mode (transparent)"
              value: "light-transparent"
            - label: "Switch example to dark mode (transparent)"
              value: "dark-transparent"
          ')
          class='js-kss-example-switcher'
        }}

        {{> kss-navi-button
          appearance='expand'
          items=(parse '
            - label: "Expand example"
              value: "true"
              icon: "expand"
              current: false
          ')
          class='js-kss-expand-switcher'
        }}
      {{/kss-section-inline}}
    {{/unless}}
  {{/kss-bar-tool}}

  <div class="kss-layout-drawer__drawer  kss-c-box  js-kss-drawer__drawer">

    {{!--
      heading
    --}}
    {{> kss-heading-menu
      this
      class='kss-u--padding-top-40, kss-u--padding-right-15, kss-u--padding-left-15'
    }}

    {{!--
      widget
    --}}
    {{#if @root.options.homepage}}
      {{#> kss-section-menu
        label='OVERVIEW'
        class='kss-u--padding-top-40, kss-u--padding-horizontal-25'
      }}

        {{!--
          navigation
        --}}
        {{> kss-navi-tree
          items=(array
            (map
              'header' (basename @root.options.homepage)
              'url' './index.html'
              'referenceNumber' 0
              'isActive' (choice @root.homepage true false)
            )
          )
          class=''
        }}

      {{/kss-section-menu}}
    {{/if}}

    {{!--
      widget
    --}}
    {{#> kss-section-menu
      label='COMPONENTS'
      class='kss-u--padding-top-40, kss-u--padding-bottom-40, kss-u--padding-horizontal-25'
    }}

      {{!--
        navigation
      --}}
      {{> kss-navi-tree
        items=@root.menu
        class='kss-u--padding-bottom-40'
      }}

    {{/kss-section-menu}}

  </div>
  <main class="kss-layout-drawer__main  kss-c-box">
    {{~> @partial-block}}
  </main>
</div>
